<h2>Log in </h2>

<%if(typeof errorMessage !== "undefined"){%>
  <p class="error-message"><%=errorMessage%></p>
<%}%>



<form id="admin-form" action="/login" method="post">
   <label for="email-input">Email</label>
   <input id="email-input" type="text" name="loginEmail" placeholder="e.g.jon@snow.com">
   <br>
   <label for="password-input">Password</label>
   <input id="password-input" type="password" name="loginPassword" placeholder="Must be at least 8 characters long and include special characters">

   <button>Log In</button>

    <p>Don't have an account?
    <a href="/signup">Sign Up</a></p>
</form>
