<div class="global-justify-center">
  <h1>Sign Up</h1>
</div>


<%if(typeof errorMessage !== "undefined"){%>
  <p class="error-message"><%=errorMessage%></p>
<%}%>

<form id="admin-form" action="/signup" method="post">
   <label for="first-name-input">First Name</label>
   <input id="first-name-input" type="text" name="signupFirstName"
   placeholder="e.g. Jon">
   <label for="last-name-input">Last Name</label>
   <input id="last-name-input" type="text" name="signupLastName"
    placeholder="e.g. Snow">
   <br>
   <label for="username-input">Username</label>
   <input id="username-input" type="text" name="signupUsername"
    placeholder="e.g. johnsnow">
   <br>
   <label for="email-input">Email</label>
   <input id="email-input" type="text" name="signupEmail" placeholder="e.g.jon@snow.com">
   <br>
   <label for="password-input">Password</label>
   <input id="password-input" type="password" name="signupPassword" placeholder="Must be at least 5 characters long and include special characters">

   <button>Sign Up</button>

   <div class="below-form">
     <p>Don't have an account?
     <a href="/login-page">Log In</a></p>
     <p>Or, go <a href="/">Home</a></p>
   </div>

</form>
